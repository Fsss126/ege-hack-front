{
  "overrides": [
    {
      "files": ["*.*"],
      "plugins": ["prettier"],
      "rules": {
        "prettier/prettier": "error"
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "createDefaultProgram": true,
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "extraFileExtensions": [".json"],
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/sort": "error"
  }
}
